<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.CheckBox?>
<TabPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
         prefWidth="600.0" tabClosingPolicy="UNAVAILABLE" xmlns:fx="http://javafx.com/fxml/1"
         xmlns="http://javafx.com/javafx/8.0.181"
         fx:controller="ninja.donhk.controllers.Configuration">
    <tabs>
        <Tab text="File Scanning">
            <content>
                <HBox>
                    <Label text="Folders separated by ;"/>
                    <TextField fx:id="customInput"/>
                    <CheckBox fx:id="inverseMode" text="InverseMode"/>
                    <Button mnemonicParsing="false" text="scan" onMouseClicked="#scanFiles"/>
                </HBox>
            </content>
        </Tab>
        <Tab text="Full text search">
            <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"/>
            </content>
        </Tab>
    </tabs>
</TabPane>
